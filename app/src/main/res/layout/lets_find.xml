<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        android:background="#def8f8"
        >


        <ImageView
            android:id="@+id/Circle1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle"
            android:layout_marginTop="-50dp">

        </ImageView>

        <ImageView
            android:id="@+id/Circle2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle"
            android:layout_marginStart="-70dp"
            >

        </ImageView>

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:background="@android:color/transparent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/lets_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_btn"
            android:layout_gravity="left"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="12dp"
            android:text="Let's Find..."
            android:textColor="#157177"
            android:textSize="22dp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_rounded_green"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/lets_find"
            >
            <ImageButton
                android:id="@+id/searchbar_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/search_green"
                android:background="@android:color/transparent"
                >

            </ImageButton>

            <EditText
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/textbox_rounded_green_no_left"
                android:hint="Search"
                android:layout_marginLeft="30dp"
                android:paddingLeft="16dp"
                >

            </EditText>



        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:background="#def8f8"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_recent_searches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent searches"
            android:textColor="#157177"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            >

        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            >


            <TextView
                android:id="@+id/search_result_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Mentor 1"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523">

            </TextView>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="14dp"
                android:background="#def8f8"
                android:src="@drawable/close_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            >


            <TextView
                android:id="@+id/search_result_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Mentor 2"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523">

            </TextView>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="14dp"
                android:background="#def8f8"
                android:src="@drawable/close_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            >


            <TextView
                android:id="@+id/search_result_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Mentor 3"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523">

            </TextView>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="14dp"
                android:background="#def8f8"
                android:src="@drawable/close_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:background="#b6ede7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back_btn"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="6dp"
                android:text="Browse Categories"
                android:textColor="#157177"
                android:textSize="24dp"
                android:textStyle="bold">

            </TextView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#b6ede7"
                    android:src="@mipmap/enterpenurship"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

                <TextView
                    android:id="@+id/textView_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="68dp"
                    android:text="Entrepreneurship"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/frwd_btn_1"
                    app:layout_constraintStart_toEndOf="@+id/imageButton2"
                    app:layout_constraintTop_toTopOf="parent">


                </TextView>

                <ImageButton
                    android:id="@+id/frwd_btn_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#b6ede7"
                    android:src="@drawable/north_east_fill0_wght400_grad0_opsz24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#b6ede7"
                    android:src="@mipmap/growth"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

                <TextView
                    android:id="@+id/textView_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="68dp"
                    android:text="Personal Growth"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/frwd_btn_2"
                    app:layout_constraintStart_toEndOf="@+id/imageButton3"
                    app:layout_constraintTop_toTopOf="parent">


                </TextView>

                <ImageButton
                    android:id="@+id/frwd_btn_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#b6ede7"
                    android:src="@drawable/north_east_fill0_wght400_grad0_opsz24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="64dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#b6ede7"
                    android:src="@mipmap/education"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

                <TextView
                    android:id="@+id/textView_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="68dp"
                    android:text="Education"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/frwd_btn_3"
                    app:layout_constraintHorizontal_bias="0.144"
                    app:layout_constraintStart_toEndOf="@+id/imageButton4"
                    app:layout_constraintTop_toTopOf="parent">


                </TextView>

                <ImageButton
                    android:id="@+id/frwd_btn_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#b6ede7"
                    android:src="@drawable/north_east_fill0_wght400_grad0_opsz24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#157177"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:scaleType="fitCenter"
                android:background="#157177"

                >

            </ImageButton>

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:layout_marginTop="-4dp"
                android:textColor="#def8f8"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:scaleType="fitCenter"
                android:background="#157177"
                >

            </ImageButton>

            <TextView
                android:id="@+id/search_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="10sp"
                android:layout_marginTop="-4dp"
                android:textColor="#def8f8"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical"
            android:backgroundTint="@color/black"
            >
            <!--            android:background="@drawable/rounded_layout"-->

            <!--            <ImageButton-->
            <!--                android:layout_width="60dp"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:src="@drawable/add_circle"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                android:background="#157177"-->
            <!--                android:layout_marginTop="-8dp"-->
            <!--                >-->

            <!--            </ImageButton>-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/chat"
                android:scaleType="fitCenter"
                android:background="#157177"

                >

            </ImageButton>

            <TextView
                android:id="@+id/chat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="10sp"
                android:layout_marginTop="-4dp"
                android:textColor="#def8f8"
                >

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#157177"
                android:scaleType="fitCenter"
                android:src="@drawable/profile"

                >

            </ImageButton>

            <TextView
                android:id="@+id/profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:layout_marginTop="-4dp"
                android:textColor="#def8f8"
                >

            </TextView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_layout"
        >

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/add_circle"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            >

        </ImageButton>

    </LinearLayout>

</RelativeLayout>