<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#def8f8"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Circle1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle"
            android:layout_marginTop="-50dp">

        </ImageView>

        <ImageView
            android:id="@+id/Circle2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/circle"
            android:layout_marginStart="-70dp"
            >

        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_mentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mentor"
                android:textSize="42dp"
                android:textColor="#36b1b9"
                android:fontFamily="@font/salsa_regular"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="me"
                android:textSize="42dp"
                android:textColor="#ffc90a"
                android:fontFamily="@font/salsa_regular"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/connect_ask_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connect. ask. learn."
            android:textSize="16dp"
            android:layout_marginTop="-8dp"
            android:textColor="#157177"
            >

        </TextView>
    </LinearLayout>

</LinearLayout>

